extends layout

block content
    #wrapper 
      #header
        h1 Chat
        #logout-wrapper
          a(href='logout')
            img#logoutIcon(src='/images/icons/logout.png', alt='logoutIcon', title='Logout')
      #mainframe
        // Contactlist 
        #left-panel
          #searchuser-wrapper
            #searchIcon-wrapper
              img(src='/images/icons/search.png', alt='searchIcon')
            #searchInput-wrapper
              input#searchInput-js(value='Search for a contact or other users')
            //#addUser-wrapper
              a#addUser-js(href='javascript:;', title='Add User')
          #contactlist-wrapper
            ul#contactlist.userlist
              li.header= "Contacts"
              li.noResult= "No contact found"
              - each contact in contacts
                li(id="uid"+contact._id).offline
                  img(src="/images/userimages/"+contact._id+".jpg", alt="userimage "+contact.username)
                  .userinfo
                    strong.username= contact.username
                    p.status â€¢ Offline
            ul#searchresult.userlist
              li.header= "Other Users"
              li.noResult= "No user found"
        // Chatwindow 
        #right-panel
          #conversation-wrapper
            ul#conversation
                        
          // Chatinput 
          #chatinput-wrapper
            input#chatinput-js(value='Please select a user or add a new user to your contactlist', disabled='disabled')
      
      input(type='hidden', id='userId', value='#{userId}')
      input(type='hidden', id='userName', value='#{username}')
      
      // Scripts
      script(src='/javascripts/lib/jquery-1.7.2.min.js', type='text/javascript')
      script(src='/javascripts/client.js', type='text/javascript')
      script(src='/javascripts/script.js', type='text/javascript')
